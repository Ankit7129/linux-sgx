/* 
 * printf: 
 *   Invokes OCALL to display the enclave buffer to the terminal.
 */
int printf(const char* fmt, ...)
{
    char buf[BUFSIZ] = {'\0'};
    va_list ap;
    va_start(ap, fmt);
    vsnprintf(buf, BUFSIZ, fmt, ap);
    va_end(ap);
    ocall_print_string(buf);
    return (int)strnlen(buf, BUFSIZ - 1) + 1;
}

/*
 * ecall_print_message:
 *   Receive an encrypted message (base64 encoded) from untrusted app,
 *   decrypt it, and print it securely inside the enclave.
 */
extern "C"{
    void ecall_print_message(char* msg, int len) {
    char buffer[1024] = {0}; // assuming message is < 1KB
    if (len >= sizeof(buffer)) len = sizeof(buffer) - 1;

    strncpy(buffer, msg, len);
    buffer[len] = '\0';

    printf("üîê Inside Enclave: %s\n", buffer);
}
